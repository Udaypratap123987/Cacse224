<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC145A"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:text="or"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:text="User name / Email address"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:text="     vkpandey789@gmail.com      "
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginStart="70dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="460dp"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="465dp"
        android:text="                     .........                              "
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginStart="70dp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:layout_marginTop="500dp"
        android:id="@+id/Checkbox"
        android:layout_marginStart="70dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="590dp"
        android:text="Forgot Password?"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>




    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/background_color"
        app:civ_border_color="#a4c639"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#a4c639"
        app:civ_shadow_radius="10dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="76dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="40dp"
        android:text="Sign up"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_corner2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="40dp"
        android:text="Log in"
        android:textStyle="bold"
        android:textColor="@android:color/white"
         android:background="@drawable/rounded_corner"/>
    <Button
        android:id="@+id/Done"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginStart="40dp"
        android:text="Done"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_corner"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:gravity="center">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/twitter"/>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/facebook"/>
        <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:src="@drawable/google2"/>
    </LinearLayout>











</RelativeLayout>